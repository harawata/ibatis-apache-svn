          <option>user-cs-unsubscribe@ibatis.apache.org</option>
          <option>user-cs-digest-unsubscribe@ibatis.apache.org</option>
          <option>dev-unsubscribe@ibatis.apache.org</option>
          <option>commits-unsubscribe@ibatis.apache.org</option>
        </select>
      </td>
    </tr>
    <tr>
      <td>
        Email Address: 
        <input onchange="buildAddress(this.form)" size="40" name="email" value="john@host.domain"/>
      </td>
    </tr>
    <tr>
      <td>

        <input type="button" onclick="buildAddress(this.form)" value="Show address" />
        Click to see the unsubscribe address.
      </td>
    </tr>
